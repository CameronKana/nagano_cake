
<h2>プロフィール編集</h2>
<%= form_with model: @customer, url: admin_customer_path do |f| %>

  <label for="inputName">氏名</label>
  <p><%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"名前"%>　  <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"名前"%></p>

  <label for="inputName">フリガナ</label>
  <p><%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"名前"%>　  <%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"名前"%></p>

  <label for="inputName">郵便番号</label>
  <p><%= f.text_field :postal_code, autofocus: true, id:"inputName", placeholder:"名前"%></p>

 <label for="inputName">住所</label>
  <p><%= f.text_field :address, autofocus: true, id:"inputName", placeholder:"名前"%></p>

  <label for="inputName">電話番号</label>
  <p><%= f.text_field :telephone_number, autofocus: true, id:"inputName", placeholder:"名前"%></p>

 <label for="inputName">メールアドレス</label>
  <p><%= f.text_field :email, autofocus: true, id:"inputName", placeholder:"名前"%></p>

  <!--<label for="inputImage">ProfileImage</label>-->
  <!--<#%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>-->
  <%= f.submit "変更を保存" %>
<% end %>