<div class="container">
 <div class="row">
 <div class="col-md-8" style="background-color: ">

  <h1>会員一覧</h1>

  <%#= link_to admin_customer_path(customer.id) do %>
  <%# end %>
 <table class="table">
  <thead>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </thead>

  <% @customers.each do |customer| %>
  <tbody>
   <td> <%= customer.id %> </td>
   <td> <%= link_to admin_customer_path(customer.id) do %> <%= customer.first_name %> <%= customer.last_name %></td> <% end %>
   <td> <%= customer.email %></td>
   <td> <%= customer.is_active %></td>
   <%#= link_to "詳細", edit_admin_customer_path %>

<% end %>
