<h3>ジャンル編集</h3>

<%= form_for @item, url: admin_item_path do |f| %>

  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  
  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :introduction %>

  <h4>税抜価格</h4>
  <%= f.text_field :price %>

  <h4>販売ステータス</h4>


  <%= f.submit '保存' %>

<% end %>