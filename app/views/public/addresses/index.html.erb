<h1>配送先登録/一覧</h1>
<%= form_with model: @address do |f| %>

  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_area :address %>

  <h4>氏名</h4>
  <%= f.text_area :name %>

  <%= f.submit '投稿' %>

<% end %>

<% @addresses.each do |address| %>
  <div>
    <p>郵便番号：<%= address.postal_code %></p>
    <p>住所：<%= address.address %></p>
    <p>宛名：<%= address.name %></p>
  </div>
  <p><%= link_to "編集", edit_address_path(address.id) %></p>
  <p><%= link_to "削除", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></p>
<% end %>